<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header_admin %>
    </header>
    <div class="container">

      <main>
        <div class="row">
          <div class="col-md-3">
            <img src="https://avatars1.githubusercontent.com/u/8406261"  alt="user profile" class="center img-thumbnail" />
            <hr>
            <% if (user) { %>
              <table class="table table-striped">
                <tr><td><strong><%= user.local.email %></strong></td></tr>
                <tr><td><strong><%= user.local.name %></strong></td></tr>
                <tr><td><strong><%= user.local.dni %></strong></td></tr>
                <tr><td><strong><%= user.local.phone %></strong></td></tr>
                <tr><td><strong><%= user.local.country %></strong></td></tr>
                <tr><td><strong><%= user.local.city %></strong></td></tr>
              </table>
            <% } %>
            <hr>
          </div>
          <div class="col-md-9">
            <% if (user) { %>
              <form method="post" action="/admin/profile">
                <div class="form-group">
                  <label for="name">Nombre</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Nombre" value="<%- usersus.name %>" required>
                </div>
                <div class="form-group">
                  <label for="dni">DNI</label>
                  <input type="text" class="form-control" id="dni" name="dni" placeholder="DNI" value="<%- usersus.dni %>"  required>
                </div>
                <div class="form-group">
                  <label for="country">Pais</label>
                  <select class="form-control" id="country" name="country" value="<%- usersus.country %>">
                    <option value="Colombia">Colombia</option>
                    <option value="Ecuador">Ecuador</option>
                    <option value="Peru">Peru</option>
                    <option value="Bolivia">Bolivia</option>
                    <option value="Chile">Chile</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="city">Ciudad</label>
                  <select class="form-control" id="city" name="city" value="<%- usersus.city %>">
                    <option value="Pereira">Pereira</option>
                    <option value="Manizales">Manizales</option>
                    <option value="Armenia">Armenia</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="phone">Telefono</label>
                  <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" value="<%- usersus.phone %>" required>
                </div>
                <div>
                  <button type="submit" class="btn btn-primary form-control">Actualizar Informacion</button>
                </div>
              </form>
            <% } %>
          </div>
        </div>
      </main>
    </div>
    <%include ../partials/footer %>
  </body>
</html>

</script>
