<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="container">
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>
    <main>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <h3>Recuperacion de contrasena</h3><br>
          <form action='/user/password_set' method='post'>
            <div class="form-group">
              <label for="password">Ingrese su nueva contrasena</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
              <input type="hidden" name="link" value="<%- id %>">
              <input type="submit" id="login" class="btn btn-primary form-control" value="Guardar nueva contrasena">
              <span id='errorLogin'></span>
          </form>
        </div>
      </div>
    </main>
    </div>
    <%include ../partials/footer %>
  </body>
</html>
